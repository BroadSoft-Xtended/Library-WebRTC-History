.bdsft-webrtc
	.history-row:hover, .history-row.active
		background #F2F2F2
	.history-row
		cursor pointer
		position relative
		padding 5px
		span
			padding 0px 5px
		.row
			height 46px
		.direction
			color #3DA005
			font-size 18px
		.icon-arrow-down-thick
			color #E9651D
		.destination
			color #525252
			font-size 18px
			text-decoration none
		.date
			color #525252
			font-size 10px
		.length
			color #525252
			font-size 10px
		.details-arrow
			font-size 16px
			position absolute
			right 0